<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXPaginatedTableView?>
<?import io.github.palexdev.materialfx.controls.MFXTableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import io.github.palexdev.mfxresources.fonts.MFXFontIcon?>

<StackPane stylesheets="@../css/Buttons.css, @../css/AdminSidebar.css"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="io.github.palexdev.materialfx.demo.controllers.AdminHomeController">

    <HBox>
        <!-- Orange Sidebar -->
        <VBox fx:id="sidebarContainer" styleClass="sidebar">
            <Label text="Admin Panel" styleClass="sidebar-title"/>
            
            <!-- User Management Button -->
            <MFXButton text="User Management" styleClass="sidebar-button" onAction="#handleUserManagement">
                <graphic>
                    <MFXFontIcon description="fas-users" size="18.0"/>
                </graphic>
            </MFXButton>
            
            <!-- Product Management Button -->
            <MFXButton text="Product Management" styleClass="sidebar-button" onAction="#handleProductManagement">
                <graphic>
                    <MFXFontIcon description="fas-boxes" size="18.0"/>
                </graphic>
            </MFXButton>

            <!-- Order Management Button -->
            <MFXButton text="Order Management" styleClass="sidebar-button" onAction="#handleOrderManagement">
                <graphic>
                    <MFXFontIcon description="fas-shopping-cart" size="18.0"/>
                </graphic>
            </MFXButton>
            
            <!-- Dashboard Button -->
            <MFXButton text="Dashboard" styleClass="sidebar-button" onAction="#handleDashboard">
                <graphic>
                    <MFXFontIcon description="fas-chart-line" size="18.0"/>
                </graphic>
            </MFXButton>
            
            <!-- Logout Button -->
            <MFXButton text="Logout" styleClass="sidebar-button" onAction="#handleLogout">
                <graphic>
                    <MFXFontIcon description="fas-sign-out-alt" size="18.0"/>
                </graphic>
            </MFXButton>
        </VBox>

        <!-- Main Content Area -->
        <AnchorPane fx:id="contentArea" prefHeight="800.0" prefWidth="1200.0" styleClass="admin-content" HBox.hgrow="ALWAYS">
            <!-- Welcome Label -->
            <Label fx:id="contentLabel"
                   AnchorPane.topAnchor="20.0"
                   AnchorPane.leftAnchor="40.0"
                   style="-fx-font-size: 24px; -fx-text-fill: #34495E;"
                   text="Welcome to the Dashboard" />

            <!-- Users Table -->
            <MFXPaginatedTableView fx:id="usersTable"
                                   AnchorPane.topAnchor="80.0"
                                   AnchorPane.leftAnchor="40.0"
                                   AnchorPane.rightAnchor="40.0"
                                   AnchorPane.bottomAnchor="100.0">

                <tableColumns>
                    <MFXTableColumn fx:id="firstNameColumn" prefWidth="120" text="First Name" />
                    <MFXTableColumn fx:id="lastNameColumn" prefWidth="120" text="Last Name" />
                    <MFXTableColumn fx:id="emailColumn" prefWidth="200" text="Email" />
                    <MFXTableColumn fx:id="roleColumn" prefWidth="100" text="Role" />
                    <MFXTableColumn fx:id="phoneNumberColumn" prefWidth="120" text="Phone Number" />
                    <MFXTableColumn fx:id="dateOfBirthColumn" prefWidth="100" text="Date of Birth" />
                    <MFXTableColumn fx:id="profilePictureColumn" prefWidth="100" text="Profile Picture" />
                    <MFXTableColumn fx:id="createdAtColumn" prefWidth="100" text="Created At" />
                    <MFXTableColumn fx:id="updatedAtColumn" prefWidth="100" text="Updated At" />
                    <MFXTableColumn fx:id="isActiveColumn" prefWidth="80" text="Active" />
                    <MFXTableColumn fx:id="coachingLicenseColumn" prefWidth="120" text="Coaching License" />
                    <MFXTableColumn fx:id="actionsColumn" prefWidth="100" text="Actions" />
                </tableColumns>
            </MFXPaginatedTableView>

            <!-- Add Button -->
            <MFXButton fx:id="addButton"
                       AnchorPane.bottomAnchor="40.0"
                       AnchorPane.leftAnchor="40.0"
                       onAction="#handleAddUser"
                       styleClass="mfx-button-primary"
                       prefHeight="35.0"
                       prefWidth="122.0"
                       text="Add User">
                <graphic>
                    <MFXFontIcon description="fas-plus" size="16.0" />
                </graphic>
            </MFXButton>
        </AnchorPane>
    </HBox>
</StackPane>